{
    "name": "langchain-graphrag",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "[python]": {
                    "editor.tabSize": 4,
                    "editor.insertSpaces": true,
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "testing.unittestEnabled": false,
                    "testing.pytestEnabled": true,
                    "testing.pytestArgs": [
                        "tests"
                    ],
                    "defaultInterpreterPath": "./venv/bin/python"
                },
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/__pycache__": true
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh"
                    },
                    "fish": {
                        "path": "fish"
                    },
                    "tmux": {
                        "path": "tmux",
                        "icon": "terminal-tmux"
                    },
                    "pwsh": {
                        "path": "pwsh",
                        "icon": "terminal-powershell"
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "visualstudioexptteam.vscodeintellicode",
                "ms-python.mypy-type-checker",
                "github.vscode-github-actions"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installOhMyZshConfig": false,
            "configureZshAsDefaultShell": true
        },
        // Python
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        },
        // Rust (required by few python libraries)
        "ghcr.io/devcontainers/features/rust:1": {},
        // Enable Docker (via Docker-in-Docker)
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        // Modern shell utils
        "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:1": {},
        // rye
        "./rye": {}
    },
    "mounts": [
        "source=devcontainer-zshhistory,target=/commandhistory,type=volume"
    ],
    "postCreateCommand": "bash scripts/post-create.sh"
}